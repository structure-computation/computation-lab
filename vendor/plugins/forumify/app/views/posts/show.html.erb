<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", forum_topic_posts_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_forum_topic_post_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", forum_topic_post_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.post.title_post", :default => t("activerecord.labels.title_post", :default => "Title post")) %>:</b>
          <%= @post.title_post %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.post.content", :default => t("activerecord.labels.content", :default => "Content")) %>:</b>
          <%= @post.content.html_safe %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.post.topic_id", :default => t("activerecord.labels.topic_id", :default => "Topic")) %>:</b>
          <%= @post.topic_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.post.user_id", :default => t("activerecord.labels.user_id", :default => "User")) %>:</b>
          <%= @post.user_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_forum_topic_post_path(@post), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), forum_topic_post_path(@post), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>