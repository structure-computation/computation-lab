!!!
%html
  %head
    %title Structure Computation - Forums
    = stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/drastic-dark/style", "web-app-theme/override", :cache => true
    = javascript_include_tag :defaults, :cache => true     
    
    = yield :tinymce
    = yield :tinymce_init
    
    = csrf_meta_tag                                  
    
  %body
    #container
      #header
        %h1
          %a{:href => "http://localhost:3001/forums/"} Structure Computation - Forums
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Sign up")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Sign in")
            %li
              %a.logout{:href => destroy_user_session_path}= t("web-app-theme.logout", :default => "Logout")   
            - if user_signed_in?
              %li{:href => "#"}= t("web-app-theme.profile", :default => "Signed in as #{current_user.email}. Not you?") 
            - else
              %li{:href => new_user_registration_path}= t("web-app-theme.logout", :default => "Sign up")
              or                
              %li{:href => new_user_session_path}= t("web-app-theme.logout", :default => "Sign in")
              
              
        #main-navigation
          %ul.wat-cf
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Structure Computation - Forums.
        #sidebar
          = yield :sidebar
