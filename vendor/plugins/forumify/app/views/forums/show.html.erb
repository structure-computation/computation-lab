<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", forums_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_forum_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", forum_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.forum.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @forum.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.forum.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @forum.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.forum.ancestry", :default => t("activerecord.labels.ancestry", :default => "Ancestry")) %>:</b>
          <%= @forum.ancestry %>
        </p> 
        <p>
          <b><%= link_to 'Voir les topics', forum_topics_path(@forum) %> </b>
          <%= @forum.ancestry %>
        </p>                      
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_forum_path(@forum), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), forum_path(@forum), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>