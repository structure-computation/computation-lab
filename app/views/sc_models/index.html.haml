-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      %li.LM_pic_new_model
        = link_to "Nouveau modèle", new_company_sc_model_path  

-content_for :right_top do
  %h2.grey
    Liste des modèles 
  %div
    = render :partial => "search_filter"
    %label{:for => "search_filter"} Recherche
    %input#search_filter{:type => "text"}

-content_for :company_content do
  %table.grey#models_table
    %thead
      %tr
        %th.no_sorter
        %th Nom
        %th ID
        %th Projet
        %th Résultat
        %th.no_sorter Actions
    %tbody
      - @sc_models.each do |sc_model|
        %tr
          %td
            = link_to 'Détails', company_sc_model_path(@company, sc_model)
          %td= sc_model.name ? sc_model.name : 'Undefined'
          %td= sc_model.id
          %td= sc_model.project ? sc_model.project : 'Undefined'
          %td= sc_model.results
          %td.action_on_table
            %ul
              %li
                %a Visualisation
              %li
                %a Calcul
              %li
                = link_to 'Supprimer', company_sc_model_path(@company, sc_model), :method => :delete

  = coffeescript_include_tag "search"

  :coffeescript
    $('#models_table').tablesorter()
