-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      /%li.LM_pic_model
      /  = link_to "Retour à la liste de modèles", workspace_sc_models_path(@workspace)
      %li.LM_pic_materiau
        =link_to 'Retour au laboratoire', :controller => :laboratory, :action => :index, :anchor => 'Modèles'
      %li.manage_pic_nouveau_membre
        = link_to "Partager", :controller => :sc_models, :action => :share, :id => @sc_model.id

-content_for :right_top do
  %h2.grey
    Détail du modèle : 
    = @sc_model.name
  /.grey 
  /#modele_details
  %table.grey
    %tbody
      %tr
        %th Dimension
        %td= @sc_model.dimension
      %tr
        %th Nombre de degrés de libertés
        %td= @sc_model.sst_number
      %tr
        %th Nombre de pièces
        %td= @sc_model.parts
      %tr
        %th Nombre de liaisons
        %td= @sc_model.interfaces

                   
-content_for :workspace_content do
  %h2.grey
    Modèle : 
    = @sc_model.name
  .wrapper
    #left_content
      %ul.tab_submenu.js_tab_submenu
        %li 
          %a#tab_1.selected{:href => "#Outils"} Outils
        %li 
          %a#tab_2{:href => "#Résultats"} Résultats
        %li 
          %a#tab_3{:href => "#Utilisateurs"} Utilisateurs
                       
    #right_content
      .tab_content.js_tab_content
        #tab_1_content.show
          %ul.toolBox
            /%li
            /  %ul.subToolBox
            /    %li.With70
            /      = link_to "SCult", :controller => "scult", :action => "index", :sc_model_id => @sc_model.id
            /    %li
            /      dépot et maillage du modèle
            /    %li
            /      statut : 
            /      =@sc_model.state
            %li
              %ul.subToolBox
                -if @sc_model.state != "active"
                  %li.With70
                    = link_to "SCills", :controller => "scult", :action => "index", :sc_model_id => @sc_model.id
                  %li
                    dépot de maillage
                -else
                  %li.With70
                    = link_to "SCills", sc_model_calculs_path(@sc_model), :target => "_blank" 
                  %li
                    calcul de structures
                %li
                  statut : 
                  =@sc_model.state

            %li
              %ul.subToolBox
                %li.With70
                  = link_to "SCore", :controller => "score", :action => "index", :sc_model_id => @sc_model.id, :target => "_blank" 
                %li
                  corrélation

            %li
              %ul.subToolBox
                %li.With70
                  = link_to "SCeen", :controller => "sceen", :action => "index", :sc_model_id => @sc_model.id, :target => "_blank" 
                %li
                  visualisation du modèle et prévisualisation des résultats
                
        #tab_2_content.hide
          %h3 Liste des résultats
          = render :partial => 'sc_models/results_list', :object => @sc_model.calcul_results

        #tab_3_content.hide
          %h3 Liste des utilisateurs ayant accès à ce modèle
          .search_filter
            %p
              %label{:for => "users_search_filter"} Recherche
              %input#users_search_filter{:type => "text"}
          %table.grey#users_table
            %thead
              %tr
                %th E-mail
                %th Nom
                %th Role
            %tbody
              - @sc_model.model_ownerships.each do |ownerships|
                %tr
                  %td
                    = ownerships.workspace_member.user.email
                  %td
                    = ownerships.workspace_member.user.firstname
                  %td
                    = ownerships.rights
        = coffeescript_include_tag "manage_tab"

:coffeescript
  $( ->
    $('#users_table').tablesorter()

    searchFilter("users_table", "users_search_filter")
  )
