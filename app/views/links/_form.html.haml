%h3 Comportement générique :

%p
  Parfait
  = check_box_tag "link_comp_generic_pa", "pa", @link.comp_generique.downcase.include?("pa"), :disabled => true
  Elastique
  = check_box_tag "link_comp_generic_el", "el", @link.comp_generique.downcase.include?("el"), :disabled => true
  Contact
  = check_box_tag "link_comp_generic_co", "co", @link.comp_generique.downcase.include?("co"), :disabled => true

%h3 Comportement complexe :

%p
  Plastique
  = check_box_tag "link_comp_complexe_pl", "pl", @link.comp_complexe.downcase.include?("pl"), :disabled => true
  Cassable
  = check_box_tag "link_comp_complexe_ca", "ca", @link.comp_complexe.downcase.include?("ca"), :disabled => true

= form_for [@workspace, @link] do |f|

  = f.hidden_field :comp_generique
  = f.hidden_field :comp_complexe

  .wrapper
    #left_content
      %ul.tab_submenu.js_tab_submenu
        %li 
          %a#tab_1.selected{:href => "#Génériques"} Génériques
        - if !@link.comp_complexe.empty?
          %li 
            %a#tab_2{:href => "#Complexe"} Complexe
    #right_content      
      .tab_content.js_tab_content
        #tab_1_content
          = render :partial => "links/details/link_generic_information", :locals => { :link => @link, :disabled => false }
        #tab_2_content
          = render :partial => "links/details/link_complexe_information", :locals => { :link => @link, :disabled => false }
      
        = coffeescript_include_tag "manage_tab"

  - if action_name == "edit"
    = submit_tag "Editer", :class => 'yellow_button'
  - else 
    = submit_tag "Créer", :class => 'yellow_button'
    = link_to "Annuler", workspace_links_path, :class => 'yellow_button'