- content_for :left_submenu do
  #contentleft
    = render :partial => "partials/raccourcis_modele"

- content_for :content_company do
  - if @link.comp_complexe.nil?
    - @comp_generique  = ["Parfaite", "Elastique", "Contact"]
    - @comp_complexe = ["Plastique", "Cassable"]

    = form_for new_company_material_path, :html => {:method => :get} do 

      %p
        - @comp_generique.each do |comp|
          = label_tag  comp
          = check_box_tag comp, true
      %p
        - @comp_complexe.each do |comp|
          = label_tag  comp
          = check_box_tag comp, true
      %p
        = hidden_field_tag :next, true
      %p
        = submit_tag "Suivant"
  - else
    = render "form"
