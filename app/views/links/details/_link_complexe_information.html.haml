- if @link.comp_complexe.downcase.include? "pl"
  #material_plastic_information
    %h3
      Plastique
    %table.grey
      %tbody
        %tr
          %td Limite de plasticité :
          %td.label_table
            = label :link, :Lp, "Lp = "
          %td
            = text_field :link, :Lp, :value => @link.Lp, :disabled => disabled, :size => '10'
        %tr
          %td Taux de plastification :
          %td.label_table
            = label :link, :Dp, "Dp = "
          %td
            = text_field :link, :Dp, :value => @link.Dp, :disabled => disabled, :size => '10'
        %tr
          %td Déformation plastique :
          %td.label_table
            = label :link, :p, "p = "
          %td
            = text_field :link, :p, :value => @link.p, :disabled => disabled, :size => '10'
    
