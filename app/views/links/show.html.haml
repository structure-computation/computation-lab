-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      %li.LM_pic_liaison
        =link_to 'Retour à la liste des liaisons', company_links_path(@company)
      %li.LM_pic_liaison
        =link_to 'Editer la liaison', edit_company_link_path(@company, @link)        

-content_for :right_top do 
  %h2.grey
    Description
  .grey
    %ul
      %li
        Référence :
        = @link.reference
      %li
        ID :
        = @link.id
      %li
        Famille :
        = @link.family
      %li
        Comportement générique :
        - if @link.comp_generique.downcase.include? "pa"
          %span Parfait
        - if @link.comp_generique.downcase.include? "el"
          %span Elastique
        - if @link.comp_generique.downcase.include? "co"
          %span Contact
      %li
        Comportement complexe :
        - if @link.comp_complexe.downcase.include? "pl"
          %span Plastique
        - if @link.comp_complexe.downcase.include? "ca"
          %span Cassable

-content_for :company_content do    
  %h2.grey
    Liaison : 
    = @link.name
  .wrapper
    #left_content
      %ul.tab_submenu.js_tab_submenu
        %li 
          %a#tab_1.selected{:href => "#Génériques"} Génériques
        %li 
          %a#tab_2{:href => "#Complexe"} Complexe
    #right_content      
      .tab_content.js_tab_content
        #tab_1_content
          = render :partial => "links/details/link_generic_information", :locals => { :link => @link, :disabled => true }
        #tab_2_content
          = render :partial => "links/details/link_complexe_information", :locals => { :link => @link, :disabled => true }
      
        = coffeescript_include_tag "manage_tab"