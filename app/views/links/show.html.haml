-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      %li.LM_pic_liaison
        =link_to 'Retour à la liste des liaisons', workspace_links_path(@workspace)
      %li.LM_pic_liaison
        =link_to 'Editer la liaison', edit_workspace_link_path(@workspace, @link)

-content_for :right_top do 
  %h2.grey
    Description
  .grey
    %ul
      %li
        Référence :
        = @link.reference
      %li
        ID :
        = @link.id
      %li
        Famille :
        = @link.family
      %li
        Comportement générique :
        Parfait
        = check_box_tag "link_comp_generic_pa", "pa", @link.comp_generique.downcase.include?("pa"), :disabled => true
        Elastique
        = check_box_tag "link_comp_generic_el", "el", @link.comp_generique.downcase.include?("el"), :disabled => true
        Contact
        = check_box_tag "link_comp_generic_co", "co", @link.comp_generique.downcase.include?("co"), :disabled => true
      %li
        Comportement complexe :
        Plastique
        = check_box_tag "link_comp_complexe_pl", "pl", @link.comp_complexe.downcase.include?("pl"), :disabled => true
        Cassable
        = check_box_tag "link_comp_complexe_ca", "ca", @link.comp_complexe.downcase.include?("ca"), :disabled => true

-content_for :workspace_content do    
  %h2.grey
    Liaison : 
    = @link.name
  .wrapper
    #left_content
      %ul.tab_submenu.js_tab_submenu
        %li 
          %a#tab_1.selected{:href => "#Génériques"} Génériques
        - if !@link.comp_complexe.empty?
          %li 
            %a#tab_2{:href => "#Complexe"} Complexe
    #right_content      
      .tab_content.js_tab_content
        #tab_1_content
          = render :partial => "links/details/link_generic_information", :locals => { :link => @link, :disabled => true }
        #tab_2_content
          = render :partial => "links/details/link_complexe_information", :locals => { :link => @link, :disabled => true }
      
        = coffeescript_include_tag "manage_tab"