- content_for :additionnal_stylesheets do
  = stylesheet_link_tag "table"
  = stylesheet_link_tag "main_link"

- content_for :additionnal_javascript do
  = javascript_include_tag "material/functions_layer_material"
  = javascript_include_tag "material/init_new_link"

/ wizard création de projet en premier plan
.content
  / partie gauche du contenu, raccourci
  #contentleft
    .contentheightmin
    = render :partial => "partials/raccourcis_modele"
  / fin partie gauche du contenu
  
  / partie droite du contenu, tableaux, informations importantes
  #contentright
    #largeBox
      %h2
        Liaison : 
        = @link.name
      %ul.main_infos
        %li
          Référence :
          = @link.reference
        %li
          Famille :
          = @link.family
        %li
          Comportement générique :
          - if @link.comp_generique.downcase.include? "pa"
            %span Parfait
          - if @link.comp_generique.downcase.include? "el"
            %span Elastique
          - if @link.comp_generique.downcase.include? "co"
            %span Contact
        %li
          Comportement complexe :
          - if @link.comp_complexe.downcase.include? "pl"
            %span Plastique
          - if @link.comp_complexe.downcase.include? "ca"
            %span Cassable

      #material_information
        = render :partial => "links/details/link_generic_information", :locals => { :link => @link, :disabled => true }
      = render :partial => "links/details/link_complexe_information", :locals => { :link => @link, :disabled => true }
