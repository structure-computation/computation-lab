-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      %li.LM_pic_liaison
        =link_to 'Retour à la liste des liaisons', company_links_path(@company)

-content_for :right_top do 
  %h2.grey
    Description
  .grey
    %ul
      %li
        Référence :
        = @link.reference
      %li
        Famille :
        = @link.family
      %li
        Comportement générique :
        - if @link.comp_generique.downcase.include? "pa"
          %span Parfait
        - if @link.comp_generique.downcase.include? "el"
          %span Elastique
        - if @link.comp_generique.downcase.include? "co"
          %span Contact
      %li
        Comportement complexe :
        - if @link.comp_complexe.downcase.include? "pl"
          %span Plastique
        - if @link.comp_complexe.downcase.include? "ca"
          %span Cassable

-content_for :left_content do    
  %ul.tab_submenu
    %li 
      %a#tab_1.selected{:href => "#"} Génériques
    %li 
      %a#tab_2{:href => "#"} Complexe
      
-content_for :right_content do 
  .tab_content
    %h2.grey
      Liaison : 
      = @link.name
    .wrapper
      #tab_1_content.show
        = render :partial => "links/details/link_generic_information", :locals => { :link => @link, :disabled => true }
      #tab_2_content.hide
        = render :partial => "links/details/link_complexe_information", :locals => { :link => @link, :disabled => true }
    
      = render "shared/tab_javascript"