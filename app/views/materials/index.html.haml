- content_for :additionnal_stylesheets do
  = stylesheet_link_tag "table"

/ Vue Index des materials.
/ Liens vers les CSS
%link{ :href => "/stylesheets/main_material.css", :rel => "stylesheet", :media => "screen" }

/ Javascript particulier a la page material
%script{ :src => "/javascripts/material/functions_layer_material.js" ,   :type => "text/javascript" }
%script{ :src => "/javascripts/material/init_new_material.js" ,   :type => "text/javascript" }

/ wizard création de projet en premier plan
.content
  #bl_5.black.off
  / wizard de creation d'un nouveau material
  = render :partial => "material_nouveau"

  / partie gauche du contenu, raccourci
  #contentleft
    .contentheightmin
    = render :partial => "partials/raccourcis_modele"
    = render :partial => "add_material"
  / fin partie gauche du contenu
  
  / partie droite du contenu, tableaux, informations importantes
  #contentright
    #largeBox
      %h2
        Liste des matériaux
    #largeBoxcontent
      / taille minimum du contenu du contenu
      .contentheightmin
      / taille minimum du contenu du contenu
      
      #MaterialDetail.off
        = render :partial => "material_detail"
      #MaterialListe.on
        = render :partial => "materials_filter"
        / liste des projet
        %table
          %thead
            %tr
              %th 
              %th Nom
              %th Famille
              %th Type
              %th{ :colspan => 2 } Comportement
          %tbody
            = render @standard_materials
        %a.button_style{ :href => "#", :onclick => "CPcurrent_stage=displayNewMaterial('on')" }
          %img{ :src => "/images/LM_pic_new_mat.png" }
          Nouveau materiaux
      
/ fin de #contentright, partie droite du contenu
%script{ :type => "text/javascript" }
  $(document).ready(filtre_material_change_owner);
  
/= render :partial => "footer_top"