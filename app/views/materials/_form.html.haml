%h2
  Type :
  = @material.mtype
  - if @material.mtype.include? "el"
    Elastique
  - if @material.mtype.include? "pl"
    Plastique
  - if @material.mtype.include? "en"
    Endo

= form_for [@workspace, @material] do |f|
  %h3 Informations

  = f.hidden_field :comp
  = f.hidden_field :mtype

  = render "materials/details/material_basic_information"

  .wrapper
    #left_content
      = render "material_tab_details"
    #right_content
      = render :partial => "material_details", :locals => {:disabled => false}

  - if action_name == "edit"
    = submit_tag "Editer", :class => 'yellow_button'
  - else 
    = submit_tag "CrÃ©er", :class => 'yellow_button'
    = link_to "Annuler", workspace_materials_path(@workspace), :class => 'yellow_button'