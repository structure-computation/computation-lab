-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      %li.LM_pic_liaison
        =link_to 'Retour à la liste des matériaux', workspace_materials_path(@workspace)
    
-content_for :company_content do
  .grey
    - if @material.mtype.nil?
      - @behaviors = ["Elastique", "Plastique", "Endomageable", "Visqueux"]
      - @types      = ["Isotrope", "Orthotrope"]
  
      = form_for new_workspace_material_path, :html => {:method => :get} do 
        %p
          = label_tag("Type")
          = select "", :type, @types
  
        %p
          - @behaviors.each do |behavior|
            = check_box_tag behavior, true
            = label_tag behavior
            %br/
        %p
          = submit_tag "Suivant", :class => 'yellow_button'
    - else
      = render "form"
