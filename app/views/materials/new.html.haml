  = stylesheet_link_tag "table"
  = stylesheet_link_tag "main_material"

- content_for :additionnal_javascript do
  = javascript_include_tag "material/functions_layer_material"
  = javascript_include_tag "material/init_new_material"

/ wizard crÃ©ation de projet en premier plan
.content
  / partie gauche du contenu, raccourci
  #contentleft
    .contentheightmin
    = render :partial => "partials/raccourcis_modele"
  / fin partie gauche du contenu
  
  / partie droite du contenu, tableaux, informations importantes
  #contentright
    - if @material.mtype.nil?
      - @behaviors = ["Elastique", "Plastique", "Endomageable", "Visqueux"]
      - @types      = ["Isotrope", "Orthotrope"]

      = form_for new_company_material_path, :html => {:method => :get} do 
        %p
          = label_tag("Type")
          = select "", :type, @types
  
        %p
          - @behaviors.each do |behavior|
            = label_tag behavior
            = check_box_tag behavior
        %p
          = submit_tag "Suivant"
    - else
      = render "form"
