-content_for :left_top do
  .left_submenu
    %h2.grey
      Menu
    %ul
      %li.LM_pic_liaison
        =link_to 'Retour à la liste des matériaux', company_materials_path(@company)
    
-content_for :right_content do
  - if @material.mtype.nil?
    - @behaviors = ["Elastique", "Plastique", "Endomageable", "Visqueux"]
    - @types      = ["Isotrope", "Orthotrope"]

    = form_for new_company_material_path, :html => {:method => :get} do 
      %p
        = label_tag("Type")
        = select "", :type, @types

      %p
        - @behaviors.each do |behavior|
          = label_tag behavior
          = check_box_tag behavior, true
      %p
        = submit_tag "Suivant"
  - else
    = render "form"
