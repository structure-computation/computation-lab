-content_for :left_submenu do
  #contentleft
    %ul.tab_submenu
      %li
        %a#tab_1.selected{:href => "#"} Info
      %li 
        %a#tab_2{:href => "#"} Directions principales
      %li 
        %a#tab_3{:href => "#"} Générique
      %li 
        %a#tab_4{:href => "#"} Elasticité
      %li 
        %a#tab_5{:href => "#"} Plasticité
      - if @material.comp.include? "vi"
        %li    
          %a#tab_6{:href => "#"} Viscosité
-content_for :content_company do
  .tab_content
    %h2
      Matériaux : 
      = @material.name
    .wrapper
      #tab_1_content.show
        %ul
          %li
            Référence :
            = @material.reference
          %li
            Famille :
            = @material.family
          %li
            Type :
            = @material.mtype
          %li
            Comportement :
            - if @material.comp.include? "el"
              %span.material_behavior Elastique
            - if @material.comp.include? "pl"
              %span.material_behavior Plastique
            - if @material.comp.include? "en"
              %span.material_behavior Endommageable
            - if @material.comp.include? "vi"
              %span.material_behavior Visqueux
        %p
          Description
        %p
          = @material.description
      #tab_2_content.hide
        = render :partial => "materials/details/material_main_information", :locals => { :material => @material, :disabled => true }
        = render :partial => "materials/details/material_generic_info", :locals => { :material => @material, :disabled => true }
          
      - if @material.comp.include? "el"
        #tab_3_content.hide
          = render :partial => "materials/details/material_elastic_information", :locals => { :material => @material, :disabled => true }
      - if @material.comp.include? "pl"
        #tab_4_content.hide
          = render :partial => "materials/details/material_plastic_information", :locals => { :material => @material, :disabled => true }
      - if @material.comp.include? "en"
        #tab_5_content.hide
          = render :partial => "materials/details/material_damageable_information", :locals => { :material => @material, :disabled => true }
      - if @material.comp.include? "vi"
        #tab_6_content.hide
          = render :partial => "materials/details/material_viscous_information", :locals => { :material => @material, :disabled => true }

  :javascript
    var nav_links = $('#contentleft a')
    nav_links.each(function () {
      $(this).click(function() {
        nav_links.removeClass('selected');
        $(this).addClass('selected');
        $('.tab_content .show').addClass('hide');
        $('.tab_content .show').removeClass('show');
        $('#'+$(this).attr('id') + '_content').addClass('show');
      });
    });
    