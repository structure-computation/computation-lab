-content_for :left_submenu do
  #contentleft
    = render :partial => "partials/raccourcis_modele"
    = render :partial => "context_leftbox"

-content_for :content_company do
  #largeBox
    %h2
      Liste des membres    
    %div
      = render :partial => "member_filter"
      %table#member_list.grey
        %thead
          %tr
            %th
            %th                  Mail
            %th                  Nom
            %th                  Role
            %th{ :colspan => 2 } Status
        %tbody
          = render :partial => "member", :collection => @members
  
      = link_to "Nouveau membre", new_company_member_path(current_user.company), :class => 'yellow_button'
  

