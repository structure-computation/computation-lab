%table.grey
  %thead
    %tr
      %th
      %th                  Mail
      %th                  Nom
      %th                  Role
      %th{ :colspan => 2 } Status
  %tbody
    - members_list.each do |member|
      %tr
        %td= link_to "Détails", company_member_path( current_user.company, member), :class => "member_details_link"
        %td= member.email
        %td= member.firstname
        %td= member.role
        %td= member.state
        %td.action_on_table
          Action…
          %ul
            %li
              =link_to "Supprimer", {:controller => "companies", :action => company_member_path( current_user.company, member), :id_membre => member.id}, :confirm => "Êtes vous sûr ?", :method => :delete
            %li 
              %a Editer

= link_to 'Ajouter un membre', new_company_member_path(@company), :class => 'yellow_button'
