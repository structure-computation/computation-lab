    %tbody
  :coffeescript
    SCVisu.stepHideOrShow = () ->
      if $('#steps').hasClass 'maximize'
        $('#steps').removeClass 'maximize'
      else
        $('#steps').addClass 'maximize'
    $ ->      
      $('#time_parameters').click( () ->
        SCVisu.stepHideOrShow()
      )
      
      $('#time_parameters')[0].onGesture('tap', SCVisu.stepHideOrShow())