  :coffeescript
    $ ->
      window.LinkCollection = new Links {company_id: #{current_user.company_id}}
      window.LinkCollection.reset #{@links.to_json.html_safe}
      window.LinkViews = new LinkListView {collection: LinkCollection}
      window.MaterialCollection = new Materials {company_id: #{current_user.company_id}}
      window.MaterialCollection.reset #{@materials.to_json.html_safe}
      window.MaterialViews = new MaterialListView {collection: MaterialCollection}
      window.CalculCollection = new Calculs
      window.CalculCollection.reset #{@calculs.to_json.html_safe}
      window.CalculViews = new CalculListView {collection: CalculCollection}
