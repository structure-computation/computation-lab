- content_for :top_calcul do 
  .tab_11_content
    %h2.grey Liste des calculs
    %ul#calculs
    #initialisation_button
      %button{:id => "next_step", :class => 'yellow_button'}
        Etape suivante
      %button{:id => "load_calcul", :class => 'yellow_button'}
        Charger le calcul
  .tab_12_content
    %h2.grey Temps
    #steps
      %button#add_step Ajouter un Step
      %select#step_type
        %option{:value => "statique"} Statique
        %option{:value => "quasistatique"} Quasistatique
        %option{:value => "dynamique"} Dynamique
      %table#steps_table.grey
        %thead
          %tr.no_sorter
            %th Nom
            %th Temps initial
            %th Pas de temps
            %th Nombre de pas de temps
            %th Temps final
            %th
        %tbody
