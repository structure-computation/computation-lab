:coffeescript
  $ ->
    LinkCollection = new Links {company_id: #{current_user.company_id}}
    LinkCollection.reset #{@links.to_json.html_safe}
    LinkViews = new LinkListView {collection: LinkCollection.models}
    MaterialCollection = new Materials {company_id: #{current_user.company_id}}
    MaterialCollection.reset #{@materials.to_json.html_safe}
    MaterialViews = new MaterialListView {collection: MaterialCollection.models}


%h2 Initialisation du calcul

#steps
  %button#add_step Ajouter un Step
  %select#step_type
    %option{:value => "statique"} Statique
    %option{:value => "quasistatique"} Quasistatique
    %option{:value => "dynamique"} Dynamique
  %table#steps_table.grey
    %thead
      %tr.no_sorter
        %th Nom
        %th Temps initial
        %th Pas de temps
        %th Nombre de pas de temps
        %th Temps final
        %th
    %tbody

%table#links_table.grey
  %thead
    %tr.no_sorter
      %th Nom
      %th
  %tbody

%table#selected_links_table.grey
  %thead
    %tr.no_sorter
      %th Nom
      %th
      %th
  %tbody

#edit_link
  = render "links/details_table/link_generic_information"
  = render "links/details_table/link_complexe_information"


= render 'calculs/partials/materials'
    #left_content
      %ul.tab_submenu
        %li 
          %a#tab_1.selected{:href => "#Génériques"} Génériques
        - if @material.comp.include? "el"
          %li
            %a#tab_2{:href => "#Elasticité"} Elasticité
        - if @material.comp.include? "pl"
          %li 
            %a#tab_3{:href => "#Plasticité"} Plasticité
        - if @material.comp.include? "en"
          %li 
            %a#tab_4{:href => "#Endommagement"} Endommagement
        - if @material.comp.include? "vi"
          %li    
            %a#tab_5{:href => "#Viscosité"} Viscosité
    #right_content
      .tab_content
        #tab_1_content.show
          = render :partial => "materials/details/material_main_information", :locals => { :material => @material, :disabled => true }
          = render :partial => "materials/details/material_generic_info", :locals => { :material => @material, :disabled => true }
            
        - if @material.comp.include? "el"
          #tab_2_content.hide
            = render :partial => "materials/details/material_elastic_information", :locals => { :material => @material, :disabled => true }
        - if @material.comp.include? "pl"
          #tab_3_content.hide
            = render :partial => "materials/details/material_plastic_information", :locals => { :material => @material, :disabled => true }
        - if @material.comp.include? "en"
          #tab_4_content.hide
            = render :partial => "materials/details/material_damageable_information", :locals => { :material => @material, :disabled => true }
        - if @material.comp.include? "vi"
          #tab_5_content.hide
            = render :partial => "materials/details/material_viscous_information", :locals => { :material => @material, :disabled => true }
  
      = coffeescript_include_tag "manage_tab"
