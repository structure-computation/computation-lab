/ partie header commune à toute les pages, CSproject.selected

%header
  .container
    #header_top
      #header_user_connected  
        - if user_signed_in?
          #user_icon
            = link_to image_tag( 'gnome-logout-icone-4198-16.png'), destroy_user_session_path  
          /#user_icon
          /  = link_to image_tag( 'info-utilisateur-icone-5701-16.png'), edit_registration_path(current_user)
          #user_information
            = link_to current_user.full_name, edit_registration_path(current_user), :target => "_blank"
          
          /#user_icon 
          /  = link_to image_tag( 'catalogue-icone-4673-16.png'), workspace_sc_models_path(current_workspace_member.workspace) 
