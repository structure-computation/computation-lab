          /  = link_to image_tag( 'sharepoint-icone-6402-16.png'), share_workspace_sc_model_path(current_workspace_member.workspace, current_workspace_sc_model) 
          
          /#user_information
          /  Project : &nbsp
          /  - if current_workspace_member.workspace
          /    = link_to current_workspace_sc_model.name, workspace_sc_model_path(current_workspace_member.workspace, current_workspace_sc_model)
          /  - else
          /    Project name
          
          #user_icon 
            = link_to image_tag( 'proprietes-session-icone-5116-16.png'), ecosystem_mecanic_workspace_path(current_workspace_member.workspace) 
          #user_icon 
            = link_to image_tag( 'catalogue-icone-4673-16.png'), workspaces_path()
