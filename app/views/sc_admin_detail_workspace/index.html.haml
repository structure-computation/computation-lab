/ wizard création de projet en premier plan
.content
  #bl_5.black.off
  / wizard d'ajout d'un nouveau forfait
  = render :partial => "sc_admin_detail_workspace/forfait/forfait_nouveau"
  = render :partial => "sc_admin_detail_workspace/abonnement/abonnement_nouveau"
  
  / partie gauche du contenu, raccourci
  #contentleft
    .contentheightmin
    /= render :partial => "partials/raccourcis_modele"
    = render :partial => "context_leftbox"
  / fin partie gauche du contenu
  
  / partie droite du contenu, tableaux, informations importantes
  #contentright
    #largeBox
      %h2
        Détail de la société
    #largeBoxcontent
      / taille minimum du contenu du contenu
      .contentheightmin
      / taille minimum du contenu du contenu
      = render :partial => "info_workspace"
      / liste des projet
      = render :partial => "contenu_workspace"
      / fin largeBoxcontent de la liste des projet
      
/ fin de #contentright, partie droite du contenu
%script{ :type => "text/javascript" }
  $(document).ready(function() {get_Current_workspace( #{@id_workspace} )});
  $(document).ready(function() {get_current_calcul_account( #{@id_workspace} )});
  $(document).ready(function() {get_current_memory_account( #{@id_workspace} )});
  $(document).ready(function() {get_Tableau_factures( #{@id_workspace} )});
  $(document).ready(function() {get_Tableau_forfait_list()});
  $(document).ready(function() {get_Tableau_abonnement_list()});
  
    
