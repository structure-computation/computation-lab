/ Liens vers les CSS
%link{ :href => "/stylesheets/main_sc_admin_detail_workspace.css", :rel => "stylesheet", :media => "screen" }

/ Javascript particulier a la page resultat
%script{ :src => "/javascripts/admin/functions_layer_sc_admin_detail_workspace.js" ,   :type => "text/javascript" }
%script{ :src => "/javascripts/admin/forfait/functions_forfait.js" ,   :type => "text/javascript" }
